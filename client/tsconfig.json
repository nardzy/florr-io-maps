{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "typeRoots": [
      "src/types/custom.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
